<Window x:Class="HelloWpf.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d"
        Title="CanvasWindow" Height="450" Width="800">
    <Canvas>
        <Ellipse Panel.ZIndex="2" Fill="Gainsboro" Canvas.Left="25" Canvas.Top="25" Width="200" Height="200"></Ellipse>
        <Rectangle Panel.ZIndex="3" Fill="LightBlue" Canvas.Left="25" Canvas.Top="25" Width="50" Height="50"></Rectangle>
        <Rectangle Panel.ZIndex="6" Fill="LightCoral" Canvas.Left="50" Canvas.Top="50" Width="50" Height="50"></Rectangle>
        <Rectangle Panel.ZIndex="5" Fill="LightCyan" Canvas.Left="75" Canvas.Top="75" Width="50" Height="50"></Rectangle>
    </Canvas>
</Window>
