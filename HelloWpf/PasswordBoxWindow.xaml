<Window x:Class="HelloWpf.PasswordBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d"
        Title="PasswordBoxWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontWeight="Bold">密码：</Label>
        <PasswordBox  PasswordChar="x" MaxLength="50" HorizontalAlignment="Left" MinWidth="100"></PasswordBox>
    </StackPanel>
</Window>
