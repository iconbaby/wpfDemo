<Window x:Class="HelloWpf.BindingListViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d"
        Title="BindingListViewWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Margin="10" >
            <Button Name="btnAddUser" Margin="10" Click="Button_Click_AddUser">Add User</Button>
            <Button Name="btnChangeUser" Margin="10" Click="Button_Click_ChangeUser">Change User</Button>
            <Button Name="btnDeleteUser" Margin="10" Click="Button_Click_DeleteUser">Delete User</Button>
        </StackPanel>
        <ListBox Name="lbDisplay" DisplayMemberPath="Name" ></ListBox>
    </DockPanel>
</Window>
