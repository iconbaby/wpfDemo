<Window x:Class="HelloWpf.GridWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d"
        Title="GridWindow2" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button >BTN1</Button>
        <Button Grid.Column="1">BTN2</Button>
        <Button Grid.Column="2">BTN3</Button>
        <Button Grid.Row="1">BTN4</Button>
        <Button Grid.Row="1" Grid.Column="1">BTN5</Button>
        <Button Grid.Row="1" Grid.Column="2">BTN6</Button>
        <Button Grid.Row="2" Grid.Column="0">BTN7</Button>
        <Button Grid.Row="2" Grid.Column="1">BTN8</Button>
        <Button Grid.Row="2" Grid.Column="2">BTN9</Button>
    </Grid>
</Window>
