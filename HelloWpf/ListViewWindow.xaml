<Window x:Class="HelloWpf.ListViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpf"
        mc:Ignorable="d"
        Title="ListViewWindow" Height="450" Width="800">
    <Grid Margin="10">
        <ListView>
            <ListViewItem>
                <WrapPanel>
                    <Image Source="/HelloWpf;component/Images/bullet-blue.png"></Image>
                    <Label VerticalAlignment="Center" Foreground="Blue">Blue</Label>
                </WrapPanel>
            </ListViewItem>
            <ListViewItem IsSelected="True" >
                <WrapPanel>
                    <Image Source="/HelloWpf;component/Images/bullet-red.png"></Image>
                    <Label VerticalAlignment="Center" Foreground="Red">Blue</Label>
                </WrapPanel>
            </ListViewItem>
            <ListViewItem>
                <WrapPanel>
                    <Image Source="/HelloWpf;component/Images/bullet-yellow.png"></Image>
                    <Label VerticalAlignment="Center" Foreground="Yellow">Blue</Label>
                </WrapPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
